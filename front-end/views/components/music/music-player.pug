.music
  .songOptions
    .song-info
      audio#trackAudio.playing
        source
      .song-info__art#trackArt

      .song-info__title#trackTitle ______________
      .song-info__artist#trackArtist ______________
    .song-buttons
      //- .like-button
      //-   i(class="fas fa-heart")
      #popout.pop
        i(class="fas fa-window-restore")
  .musicPlayer
    .player-buttons
      #shuffleButton
        i(class="fas fa-random")
      #prevButton
        i(class="fas fa-backward")
      #playButton
        i(class="fas fa-play")
      #nextButton
        i(class="fas fa-forward")
      #repeatButton
        i(class="fas fa-redo-alt")
    .progress
      .start-time#startTime
      input(type="range" min="0" max="100" value="0")#progress-bar
      .end-time#endTime
  .otherOptions
    .volume-icon
    .volume-bar
      input(type="range" min="0" max="100" value="30")#volume
      #volumeLevel 30
