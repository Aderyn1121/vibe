.main
    .text
      p Sign up with your email address
    form(method="POST" action='/signup')#auth-form
      +input('_csrf', 'hidden')
      +input('email', 'text', 'Email', true)
      +input('ConfirmEmail', 'text', 'Confirm Email', true)
      +input('password', 'password', 'Password', true)
      +input('ConfirmPassword', 'password', 'Confirm Password', true)
      +input('name', 'text', 'What is your name?', true)
      .birthday
        label(for='day')#birthdayText Birthday
        .birthdayInputs
          +input('day', 'number', 'Day' )
          select(name='date')
            each month in months
              option(value=month)= month
          +input('year', 'number', 'Year')
      .gender
        label Man
          +input('gender', 'radio', __, true, 'man')
        label Woman
          +input('gender', 'radio', __, true, 'woman')
        label Non binary
          +input('gender', 'radio', __, true, 'non_binary')
      button#auth-button Sign Up
    .line
      .line__one
      .line__two
    .text
      p Already have an account?

    a(href="/login")#signup-button Login to VIBE
